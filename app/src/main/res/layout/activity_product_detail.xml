<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.taotao.tao_oat.productdetail.PullUpToLoadMore xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:id="@+id/pulluptoLoadMore"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="0dp"
                                                       android:layout_weight="1">

        <com.taotao.tao_oat.productdetail.MyScrollView
            android:id="@+id/top_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#517db1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iamge_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/biz_ad_new_version1_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="50dp"
                        android:background="#b11"
                        android:gravity="center"
                        android:text="继续拖动查看图文详情"
                        android:textColor="#000"/>
                </LinearLayout>
            </LinearLayout>


        </com.taotao.tao_oat.productdetail.MyScrollView>

        <com.taotao.tao_oat.productdetail.MyScrollView
            android:id="@+id/bottom_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7db151">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iamge_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/biz_ad_new_version1_img0"/>
            </LinearLayout>


        </com.taotao.tao_oat.productdetail.MyScrollView>


    </com.taotao.tao_oat.productdetail.PullUpToLoadMore>
</LinearLayout>